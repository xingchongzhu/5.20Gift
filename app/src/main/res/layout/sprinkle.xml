<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/c_1"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<!--        <com.yezi.love.gift.Activity.view.MeteorView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>-->

        <include layout="@layout/big_turntable"
            android:id="@+id/big_turntable"
            android:visibility="gone"/>

        <com.yezi.love.gift.Activity.view.BezierLayout
            android:id="@+id/bezierlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            >

        </com.yezi.love.gift.Activity.view.BezierLayout>

        <com.yezi.love.gift.Activity.textpath.SyncTextPathView
            android:id="@+id/text520"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:duration="6000"
            app:showPainter="true"
            app:text="520"
            app:textInCenter="true"
            app:textSize="120sp"
            android:layout_gravity="top"
            />
        <com.yezi.love.gift.Activity.textpath.SyncTextPathView
            android:id="@+id/textLover"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:duration="8000"
            app:showPainter="true"
            app:text="LOVE叶子"
            app:textInCenter="true"
            app:pathStrokeColor="@android:color/holo_red_dark"
            app:paintStrokeColor="@android:color/white"
            app:textSize="60sp"
            android:layout_gravity="bottom"
            />
    </FrameLayout>

</RelativeLayout>